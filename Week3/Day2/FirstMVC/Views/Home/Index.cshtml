@{
    ViewData["Title"] = "Home Page";
}

@model Pet

<div class="text-center">
    <h1>Tell me about your Pet</h1>
    <form asp-action="Create" asp-controller="Home" method="post">
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Species">Species</label>
            <input asp-for="Species" class="form-control">
            <span asp-validation-for="Species" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IsFriendly"> Are your Pet Friendly ?</label>
            <input asp-for="IsFriendly">
            <span asp-validation-for="IsFriendly" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary mb-3">
    </form>

</div>
